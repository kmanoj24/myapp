<div class="container">
  <h2>Weather Forecast</h2>

  <%= form_with url: forecast_show_path, method: :post, local: true do |form| %>
    <div>
      <%= form.label :address, "Enter ZIP code or city:" %><br>
      <%= form.text_field :address, required: true %>
    </div>
    <br>
    <%= form.submit "Get Forecast", class: "logout-btn" %>
  <% end %>
</div>
